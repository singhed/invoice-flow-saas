{
  "name": "next-go-monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.8",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --dir apps/api exec go run ./cmd/api",
    "build": "pnpm --filter web build",
    "build:api": "pnpm --dir apps/api exec go build ./cmd/api",
    "lint": "pnpm --filter web lint"
  }
}

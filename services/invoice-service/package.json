{
  "name": "@invoice-saas/invoice-service",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=.test.ts$",
    "test:integration": "jest --testPathPattern=.integration.test.ts$",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t invoice-saas-invoice-service:latest .",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@invoice-saas/shared": "workspace:*",
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "puppeteer": "^21.6.1",
    "pdfkit": "^0.14.0",
    "@aws-sdk/client-s3": "^3.470.0",
    "@aws-sdk/client-sqs": "^3.470.0",
    "ioredis": "^5.3.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/pdfkit": "^0.13.4",
    "@types/jest": "^29.5.10",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}

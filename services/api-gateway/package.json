{
  "name": "@invoice-saas/api-gateway",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=.test.ts$",
    "test:integration": "jest --testPathPattern=.integration.test.ts$",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t invoice-saas-api-gateway:latest ."
  },
  "dependencies": {
    "@invoice-saas/shared": "workspace:*",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/jest": "^29.5.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}

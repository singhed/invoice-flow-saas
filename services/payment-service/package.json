{
  "name": "@invoice-saas/payment-service",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=.test.ts$",
    "test:integration": "jest --testPathPattern=.integration.test.ts$",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t invoice-saas-payment-service:latest ."
  },
  "dependencies": {
    "@invoice-saas/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.12.7",
    "@types/supertest": "^6.0.1",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}

# ⚠️ SECURITY WARNING ⚠️
# DO NOT commit this file with actual secrets!
# Use External Secrets Operator or AWS Secrets Manager for production

# This is an example template only. To use:
# 1. Copy this file to secrets.yaml
# 2. Replace all placeholder values with actual secrets
# 3. Ensure secrets.yaml is in .gitignore
# 4. For production, use External Secrets Operator instead

---
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: invoice-saas
type: Opaque
stringData:
  # Generate with: openssl rand -hex 32
  jwt-secret: "REPLACE_WITH_SECURE_RANDOM_VALUE"
  refresh-token-secret: "REPLACE_WITH_DIFFERENT_SECURE_RANDOM_VALUE"
---
apiVersion: v1
kind: Secret
metadata:
  name: rds-credentials
  namespace: invoice-saas
type: Opaque
stringData:
  host: "REPLACE_WITH_RDS_ENDPOINT"
  port: "5432"
  username: "REPLACE_WITH_DB_USERNAME"
  password: "REPLACE_WITH_STRONG_PASSWORD"
  database: "invoicedb"
  url: "postgresql://USERNAME:PASSWORD@ENDPOINT:5432/invoicedb"
---
apiVersion: v1
kind: Secret
metadata:
  name: redis-credentials
  namespace: invoice-saas
type: Opaque
stringData:
  host: "REPLACE_WITH_REDIS_ENDPOINT"
  port: "6379"
  auth_token: "REPLACE_WITH_REDIS_PASSWORD"

